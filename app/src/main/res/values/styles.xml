<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#CFD8DC</item>
    </style>

    <style name="heading_bold">
        <item name="fontFamily">@font/product_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#455A64</item>
    </style>
    <style name="sub_heading">
        <item name="fontFamily">@font/product_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#455A64</item>
    </style>
    <style name="body_text">
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#455A64</item>

    </style>

</resources>